{
  "name": "zakaat-micro-services",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "docker start zakaat-redis && turbo run dev --filter '!@repo/notifications' --filter '!api-gateway'",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "find . -type d \\( -name \"generated\" -o -name \"node_modules\" -o -name \"dist\" -o -name \".next\" -o -name \".turbo\" -o -name \".expo\" \\) -prune -exec rm -rf {} +"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
